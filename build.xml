<project name="MyProject" default="test" basedir=".">
  <!-- Set the path to the JDK if it's not in the system path -->
  <property name="jdk.dir" value="/home/rashi/Downloads/jdk-20_linux-x64_bin.deb" />
  
  <!-- Set the location of the source files and compiled classes -->
  <property name="src.dir" value="src" />
  <!-- <property name="build.dir" value="build" /> -->
  
  <!-- Compile the source code -->
  <target name="compile">
    <mkdir dir="${build.dir}" />
    <javac srcdir="${src.dir}" destdir="${build.dir}" includeantruntime="false" />
  </target>
  
  <!-- Run the test.java file -->
  <target name="test" depends="compile">
    <java classname="test" classpath="${build.dir}" fork="true" />
  </target>
</project>

